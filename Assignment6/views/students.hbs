<!-- students.hbs -->
<h2>Students</h2>
    <hr />
    <a href="/students/add" class="btn btn-success float-right">Add New Student</a>
<table class="table">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>TA</th>
            <th>Status</th>
            <th>Actions</th>
            <th></th> <!-- Empty header for the remove column -->
        </tr>
    </thead>
    <tbody>
        {{#each students}}
        <tr>
            <td>{{studentNum}}</td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{email}}</td>
            <td>{{addressStreet}}, {{addressCity}}, {{addressProvince}}</td>
            <td>{{#if TA}}Yes{{else}}No{{/if}}</td>
            <td>{{status}}</td>
            <td>
                <a href="/students/update/{{studentNum}}" class="btn btn-warning">Update</a>
            </td>
            <td>
                <a href="/student/delete/{{studentNum}}" class="btn btn-danger">Remove</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
