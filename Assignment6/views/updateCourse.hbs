<div class="row">
  <main class="col-md-12">
    <h2>Edit Course</h2>
    <hr />
    <form method="post" action="/courses/update/{{course.courseId}}">
      <input type="hidden" name="courseId" value="{{course.courseId}}" />
      <fieldset>
        <legend>Course Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label>Course Code:</label>
              <input class="form-control" name="courseCode" type="text" value="{{course.courseCode}}" />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label>Course Description:</label>
              <input class="form-control" name="courseDescription" type="text" value="{{course.courseDescription}}" />
            </div>
          </div>
        </div>
      </fieldset>
      <hr />
      <input type="submit" class="btn btn-primary float-right" value="Update Course" />
    </form>
  </main>
</div>